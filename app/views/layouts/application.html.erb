<!DOCTYPE html>
<html>
<head>
  <title>Bkbrnr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width">
</head>
<body>
  <header class='cf'>
  <div class='left'>
  <h1><%= link_to 'bk<br>br<br>nr'.html_safe, root_path %></h1>
  </div>
    <% if current_user %>
      <div class='right ui-nav'>
	<label class='avatar' for='trigger'><%= image_tag current_user.gravatar_url %></label>
	<input type="checkbox" id='trigger' />
	<ul>
	  <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
	</ul>
     </div>
    <% end %>
  </header>
<%= yield %>

</body>
</html>

